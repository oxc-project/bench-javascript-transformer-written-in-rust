{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>Boshen/renovate", "helpers:pinGitHubActionDigestsToSemver"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": "oxc",
      "matchDepNames": ["oxc"],
      "schedule": ["at any time"],
      "automergeType": "pr",
      "rangeStrategy": "bump"
    },
    {
      "groupName": "swc",
      "matchPackagePrefixes": ["swc"],
      "schedule": ["at any time"],
      "automergeType": "pr",
      "rangeStrategy": "bump"
    }
  ]
}
